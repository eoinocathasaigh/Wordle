<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.WelcomePage"
             Title="Welcome to Wordle">
    <VerticalStackLayout
        VerticalOptions="Center"
        Spacing="30"
        Padding="20">

        <VerticalStackLayout>
            <Label Text="Welcome to Wordle" FontSize="28" TextColor="Gray" HorizontalTextAlignment="Center"/>
            <Label Text="The Family Fun Guessing Game" FontSize="28" TextColor="Gray" HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <!--Content of our main page-->
        <Image Source="mainbanner.png"
            HeightRequest="200"/>

        <Button x:Name="playGame" Text="Play Wordle" Clicked="playGame_Clicked"
            WidthRequest="200"/>

        <Button x:Name="signIn" Text="Sign In" Clicked="signIn_Clicked"
        WidthRequest="200"/>
    </VerticalStackLayout>
</ContentPage>