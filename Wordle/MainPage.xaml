<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.MainPage"
             Title="Welcome to Wordle">

    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="20"
            VerticalOptions="Center">
            
            <!--Content of our main page-->
            <Image Source="gametitle.png"
                   HeightRequest="200"/>

            <Grid x:Name="GameGrid" HeightRequest="400" WidthRequest="350"
                  BackgroundColor="LightBlue"
                  VerticalOptions="Center"
                  Padding="5"
                  ColumnSpacing="5"
                  RowSpacing="5"
                  RowDefinitions="*,*,*,*,*,*"
                  ColumnDefinitions="*,*,*,*,*">

            </Grid>

            <Grid x:Name="GridGameTable" BackgroundColor="LightCoral" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="480" HeightRequest="576"
            RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*" IsVisible="true">
                <Border StrokeThickness="2"

                Scale="0.9"
                x:Name="DiceBorder"
                    StrokeShape="RoundRectangle 4,4,4,4"
                    Background="Pink"
                    Padding="1,1,1,1"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    Grid.Row="10" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="2">
                    <Border.Stroke>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="Orange"
                          Offset="0.1" />
                            <GradientStop Color="Brown"
                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Grid x:Name="DiceGrid" ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" Padding="2"/>
                </Border>

                <Border StrokeThickness="2"
                        IsVisible="true"
                            Scale="0.9"
                            x:Name="DiceBorder2"
                    StrokeShape="RoundRectangle 4,4,4,4"
                    Background="Gray"
                    Padding="1,1,1,1"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    Grid.Row="10" Grid.Column="4" Grid.RowSpan="2" Grid.ColumnSpan="2">
                    <Border.Stroke>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="Orange"
                                Offset="0.1" />
                            <GradientStop Color="Brown"
                                Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                </Border>
                
            </Grid>

            <Button x:Name="signInbtn" Text="Sign In?" Clicked="signIn"
                    WidthRequest="100"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
